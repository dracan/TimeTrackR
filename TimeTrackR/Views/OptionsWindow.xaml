<Window x:Class="TimeTrackR.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="OptionsWindow" Height="350" Width="525">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Hotkeys</TextBlock>
                </TabItem.Header>
                <StackPanel>
                    <TextBlock>Hotkey content</TextBlock>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Misc</TextBlock>
                </TabItem.Header>
                <StackPanel>
                    <TextBlock>Misc Content</TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
