<Window x:Class="TimeTrackR.Report"
        x:Name="wndReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report" Height="300" Width="500">
    <Grid>

        <ListBox ItemsSource="{Binding ElementName=wndReportWindow, Path=HistoryItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>Start = <Run Text="{Binding Start}" /></TextBlock>
                        <TextBlock>End = <Run Text="{Binding End}" /></TextBlock>
                        <TextBlock>Length = <Run Text="{Binding Length, Mode=OneWay}" /></TextBlock>

                        <ListBox ItemsSource="{Binding Path=TagSet}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock>Tag = <Run Text="{Binding Name}" /></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
